/* We can break .Xresources file into several files stored in xres directory
 *	#include "xres/urxvt"
 *	#include "xres/rofi"
*/

/*********************************************************************
 *                               rofi                                *
 *********************************************************************/

  rofi.location:          6
  rofi.color-enabled:     true
  rofi.color-window:      argb:ee0F3B5F, #CC9752, #CC9752
  rofi.color-normal:      argb:00111111, #E5DBCF, argb:00111111, #CC9752, #0F3B5F
  rofi.color-urgent:      argb:00111111, #af652f, argb:00111111, #af652f, #0F3B5F
  rofi.color-active:      argb:00111111, #70a16c, argb:00111111, #70a16c, #0F3B5F
  rofi.key-combi:         Alt-F3
  rofi.separator-style:   dash
  rofi.fullscreen:        false
  rofi.padding:           2
  rofi.hide-scrollbar:    true
  rofi.line-margin:       5
  rofi.fake-transparency: true
  rofi.yoffset:           -20
  rofi.xoffset:           0
  rofi.width:             800
  rofi.opacity:           80
  rofi.fuzzy:             true

/*********************************************************************
 *                           xft settings                            *
 *********************************************************************/

! make otf / ttf fonts look pretty.  does not matter if you are using a bitmap font.
Xft.autohint: 0
Xft.lcdfilter:  lcddefault
Xft.hintstyle:  hintfull
Xft.hinting: 1
Xft.antialias: 1
Xft.rgba: rgb

/*********************************************************************
 *                           rxvt-unicode                            *
 *********************************************************************/

! clean up urxvt, add keybinds
URxvt.intensityStyles: false
URxvt.cursorBlink: true
URxvt.scrollBar: false
URxvt.keysym.Shift-Up: command:\033]720;1\007
URxvt.keysym.Shift-Down: command:\033]721;1\007
URxvt.resize-font.smaller: C-Down
URxvt.resize-font.bigger: C-Up
URxvt.iso14755: false
URxvt.iso14755_52: false

! font
URxvt*font: xft:GohuFont:size=11:antialias=true:hinting=true, xft:Liberation \Mono \for \Powerline:size=10:antialias=true:hinting=true

! terminal padding
URxvt.internalBorder: 3

! uncomment for transparent terminal if you are ready to be made fun of in #rice
! URxvt.transparent:	true
! URxvt.shading:		15


! clickable links, clipboard support, mouse wheel support, and on the fly font resizing
! you will need to install the relevent perl extensions for these to work
URxvt.perl-ext-common: default,matcher,clipboard,vtwheel,resize-font
URxvt.url-launcher: /usr/bin/firefox
URxvt.matcher.button: 1
URxvt.matcher.rend.0: Uline Bold fg5

